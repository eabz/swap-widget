{
  "name": "swap-widget",
  "description": "A lightweight, chain-agnostic swap widget with built-in adapters for Uniswap",
  "version": "1.0.0",
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "scripts": {
    "build": "tsup",
    "dev": "concurrently \"npm:dev:lib\" \"npm:dev:example\"",
    "dev:example": "vite example",
    "dev:lib": "tsup --watch",
    "format": "biome format --write .",
    "lint": "biome lint --write --unsafe ."
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "@types/node": "24.10.1",
    "@vitejs/plugin-react": "4.2.0",
    "concurrently": "8.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tsup": "8.0.0",
    "typescript": "5.9.3",
    "vite": "5.0.0"
  },
  "types": "dist/index.d.ts"
}
